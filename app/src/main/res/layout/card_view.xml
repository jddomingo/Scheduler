<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/border"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:padding="16dp"
        android:background="#20ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_name"
            android:textSize="30sp"
            android:text="Activity Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Repetition"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_interval"
            android:layout_alignBaseline="@+id/alarm_count"
            android:layout_alignBottom="@+id/alarm_count"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_count"
            android:textSize="20sp"
            android:text="Metrics"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_hour"
            android:textSize="20sp"
            android:text="Alarm Time"
            android:layout_alignBaseline="@+id/alarm_name"
            android:layout_alignBottom="@+id/alarm_name"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:background="@drawable/listgrad"
        app:cardPreventCornerOverlap="true"
        >

    </android.support.v7.widget.CardView>

</LinearLayout>