<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.gabd.scheduler.SchedulePage">

    <include layout="@layout/nav_buttons"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@id/drawer_layout"/>


    <Button
        android:id="@+id/fab"
        android:text ="Add Alarm"
        android:textColor="#ffffff"
        android:layout_width="200dp"
        android:layout_gravity="top|center_horizontal"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_height="40dp"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="45dp"
        android:id="@+id/editText"
        android:imeOptions="actionDone"
        tools:text="Activity Name"
        android:layout_below="@+id/drawer_layout"
        android:layout_alignParentStart="true"
        android:visibility="visible"/>



    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:id="@+id/timePicker"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <com.example.gabd.scheduler.MultiSpinner
        android:id="@+id/multispinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/day_values"
        android:layout_below="@+id/timePicker"
        android:layout_alignEnd="@+id/timePicker"
        android:layout_alignStart="@+id/timePicker" />

    <RadioButton
        android:text="Hourly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hourly"
        android:layout_below="@+id/multispinner"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="15dp" />

    <RadioButton
        android:text="Daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hourly"
        android:layout_centerHorizontal="true"
        android:id="@+id/daily" />

    <RadioButton
        android:text="Weekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/daily"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:id="@+id/weekly" />

    <RadioButton
        android:text="Once"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/once"
        android:layout_below="@+id/daily"/>

</RelativeLayout>
