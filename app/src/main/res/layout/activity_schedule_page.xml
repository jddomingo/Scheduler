<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.gabd.scheduler.SchedulePage">

    <Button
        android:id="@+id/fab"
        android:text ="Add Alarm"
        android:layout_width="200dp"
        android:layout_gravity="top|center_horizontal"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_height="40dp"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:id="@+id/editText"
        tools:text="Activity Name" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daily"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textOff="DAILY"
        android:textOn="DAILY"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekly"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/daily"
        android:layout_toEndOf="@+id/daily"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textOff="WEEKLY"
        android:textOn="WEEKLY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="On these days"
        android:ems="10"
        android:layout_below="@+id/daily"
        android:id="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hourly"
        android:textOff="HOURLY"
        android:textOn="HOURLY"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/fab"
        android:layout_alignEnd="@+id/fab" />

    <ToggleButton
        android:text="ToggleButton"
        android:textOff="SAT"
        android:textOn="SAT"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton11"
        android:layout_width="30dp"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/hourly"
        android:layout_alignEnd="@+id/hourly" />

    <ToggleButton
        android:text="ToggleButton"
        android:textOff="FRI"
        android:textOn="FRI"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton10"
        android:layout_width="30dp"
        android:layout_below="@+id/editText2"
        android:layout_toLeftOf="@+id/toggleButton11"
        android:layout_toStartOf="@+id/toggleButton11" />

    <ToggleButton
        android:text="ToggleButton"
        android:textOff="WED"
        android:textOn="WED"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton6"
        android:layout_width="30dp"
        android:layout_below="@+id/editText2"
        android:layout_toLeftOf="@+id/toggleButton7"
        android:layout_toStartOf="@+id/toggleButton7" />

    <ToggleButton
        android:text="ToggleButton"
        android:textOff="THU"
        android:textOn="THU"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton7"
        android:layout_width="30dp"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <ToggleButton
        android:text="ToggleButton"
        android:textOff="TUE"
        android:textOn="TUE"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton5"
        android:layout_width="30dp"
        android:layout_alignBaseline="@+id/toggleButton6"
        android:layout_alignBottom="@+id/toggleButton6"
        android:layout_toLeftOf="@+id/toggleButton6"
        android:layout_toStartOf="@+id/toggleButton6" />

    <ToggleButton
        android:text="ToggleButton"
        android:textOff="MON"
        android:textOn="MON"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton4"
        android:layout_width="30dp"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/daily"
        android:layout_toEndOf="@+id/daily" />

    <ToggleButton
        android:text="ToggleButton"
        android:textOff="SUN"
        android:textOn="SUN"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton9"
        android:layout_width="30dp"
        android:layout_below="@+id/editText2"
        android:layout_toLeftOf="@+id/fab"
        android:layout_toStartOf="@+id/fab" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:id="@+id/timePicker"
        android:layout_below="@+id/toggleButton11"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
